{
  "manifest_version": 3,
  "name": "X Post to Speech",
  "version": "1.0",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://x.com/*", "https://api.anthropic.com/*", "https://api.stability.ai/*", "https://api.replicate.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "js": ["content.js"]
    }
  ],
  "options_page": "settings.html"
}
